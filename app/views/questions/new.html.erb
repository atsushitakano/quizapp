<main>
  <div class="container">
    <h2 class="text-center my-3">クイズの投稿</h2>
    <%= form_with(model: @question, local: true) do |f| %>
      <div class="quiz form-row align-items-center mb-3 mx-auto col-sm-6">
        <%= f.label :問題 , class: "mr-2"%>
        <%= f.text_field :quiz , class: "form-control" %>
      </div>
      
      <div class="explain_sentence form-row align-items-center mb-3 mx-auto col-sm-6">
        <%= f.label :解説 , class: "mr-2"%>
        <%= f.text_field :explain_sentence , class: "form-control" %>
      </div>
      
      <%= f.submit "送信", class: "btn btn-primary mx-auto d-block" %>
    <% end %>
  </div>
</main>